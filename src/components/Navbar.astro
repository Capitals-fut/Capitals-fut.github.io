---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<div
  class="flex justify-center max-w-6xl px-4 mx-auto fixed w-full left-0 right-0 z-20"
>
  <nav
    class="flex justify-between items-center w-full mt-2 px-4 py-2 bg-white/70 backdrop-blur-xl rounded-xl"
  >
    <h2 class="font-bold text-lg uppercase">
      <a href="/">{SITE_TITLE}</a>
    </h2>
    <div class="flex space-x-6">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="size-6 block md:hidden"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
      </svg>
      <HeaderLink href="/cities" class="hidden md:block">Cities</HeaderLink>
      <HeaderLink href="/events" class="hidden md:block">Events</HeaderLink>
      <HeaderLink href="/research" class="hidden md:block">Research</HeaderLink>
      <HeaderLink href="/news" class="hidden md:block">News</HeaderLink>
      <HeaderLink href="/information" class="hidden md:block">Information</HeaderLink>
    </div>
  </nav>
</div>
