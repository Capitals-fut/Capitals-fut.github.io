---
import type { InferEntrySchema } from "astro:content";
import FormattedDate from "@components/FormattedDate.astro";
import { Picture } from "astro:assets";
import CardTags from "./CardTags";

type Props = InferEntrySchema<"event"> & { slug: string };
const { title, description, eventDate, heroImg, cities, slug } = Astro.props;
---

<article>
  <CardTags type="events" tags={cities} />
  <a href={`/events/${slug}`} class="hover:text-sky-700 hover:underline">
    <h3 class="text-xl font-bold mt-1">
      {title}
    </h3>
  </a>
  {
    heroImg && (
      <Picture
        class="rounded-lg aspect-video mt-2"
        src={heroImg}
        formats={["avif", "webp"]}
        alt=""
      />
    )
  }
  <p class="mt-2 text-gray-700">
    {description}
  </p>
  <div class="text-gray-500 mt-6">
    <FormattedDate date={eventDate} /> / 0 comments
  </div>
</article>
