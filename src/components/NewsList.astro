---
import type { CollectionEntry } from "astro:content";
import NewsCard from "./NewsCard";
import SectionHeader from "./SectionHeader.astro";
import Button from "./Button.astro";

type Props = {
  news: CollectionEntry<"news">[];
  city?: string;
  listOnly?: boolean;
};

const { news, city, listOnly = false } = Astro.props;
---

{
  !listOnly && (
    <SectionHeader title={`Latest news${city ? ` on ${city}` : ""}`} />
  )
}
<div
  class:list={[
    "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-4 gap-y-7",
    { "mt-6": !listOnly },
  ]}
>
  {news.map((n) => <NewsCard slug={n.slug} data={n.data} />)}
</div>
{
  !listOnly && (
    <a href={`/news${city ? `?city=${city}` : ""}`}>
      <Button
        label={`View ${city ? "" : "all "}news ${city ? ` on ${city}` : ""}`}
        class="mt-8 mb-16"
      />
    </a>
  )
}
