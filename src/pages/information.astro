---
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";
import Layout from "layouts/Layout.astro";
import ContentContainer from "@components/ContentContainer.astro";
import SectionHeader from "@components/SectionHeader.astro";
import { Picture } from "astro:assets";
import { getEntry } from "astro:content";

const cities = await getEntry("city", "cities");
---

<Layout title="Events">
  <Navbar />
  <header class="pt-32 pb-6 relative">
    <div class="max-w-6xl px-4 mx-auto">
      <div class="flex gap-1">
        <h1 class="font-bold text-5xl">Information</h1>
      </div>
    </div>
  </header>
  <main>
    <ContentContainer>
      <div class="max-w-6xl px-4 mx-auto">
        <div
          class="min-h-lvh grid grid-cols-1 lg:grid-cols-5 gap-x-12 items-center"
        >
          <div
            class="flex flex-row md:flex-col items-center lg:max-h-max md:col-span-3"
          >
            {
              cities.data.map((city) => {
                return (
                  <div class="md:h-52 rounded-full odd:mt-8 even:mb-8 overflow-hidden md:flex md:items-center md:odd:ml-16 md:even:mr-16 md:odd:mt-0 md:even:mb-0 md:max-w-lg lg:max-w-full lg:aspect-[24/9]">
                    <Picture
                      class="h-96 object-cover md:object-fill md:h-full"
                      src={city.mainImg}
                      alt=""
                      formats={["avif", "webp"]}
                    />
                  </div>
                );
              })
            }
          </div>
          <div class="lg:col-span-2">
            <SectionHeader title="Our vision" />
            <p class="mt-8">
              Our research seeks to understand the interaction between
              imaginations of the future, discourses of urban planning and
              pathways of urban development. Interdisciplinary in thrust, our
              research involves geography, sociology, history, and planning
              studies
            </p>
          </div>
        </div>
      </div>
    </ContentContainer>
    <Footer />
  </main>
</Layout>
